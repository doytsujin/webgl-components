{
  "name": "@jam3/intern-webgl-components",
  "version": "0.0.1",
  "description": "Modular components and utilities used for WebGL based projects",
  "private": "true",
  "keywords": [
    "webgl",
    "threejs",
    "components",
    "best practices"
  ],
  "scripts": {
    "lint-staged": "lint-staged",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "validate": "preconstruct validate",
    "storybook": "start-storybook -p 6006 -s ./public",
    "build-storybook": "build-storybook -o ./storybook-docs",
    "publish-storybook": "npm run build-storybook && touch ./storybook-docs/.nojekyll && gh-pages -d storybook-docs -t true",
    "release": "npm build && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo \"Pre-commit checks...\" && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "echo \"Pre-push checks...\" && npm run linters"
    }
  },
  "author": {
    "name": "Amelie Maia",
    "email": "amelierosser1986@gmail.com",
    "url": "https://ameliemaia.com/"
  },
  "homepage": "https://jam3.github.io/intern-webgl-components/",
  "bugs": {
    "url": "https://github.com/Jam3/intern-webgl-components/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jam3/intern-webgl-components.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.17.6",
    "npm": ">=6.14.15"
  },
  "workspaces": [
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@preconstruct/cli": "^2.1.5",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storysource": "^6.5.9",
    "@storybook/html": "^6.5.9",
    "@types/jest": "^27.0.2",
    "babel-loader": "^8.2.3",
    "gh-pages": "^4.0.0",
    "jest": "^27.3.1",
    "storybook": "^6.5.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "gsap": "^3.10.3"
  }
}
